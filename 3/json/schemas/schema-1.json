{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.com/towns.schema.json",
    "$defs": {
        "person": {
            "type": "object",
            "properties": {
                "name": {
                    "anyOf": [
                        {
                            "type": "object",
                            "required": [
                                "cs"
                            ],
                            "properties": {
                                "cs": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "sk"
                            ],
                            "properties": {
                                "sk": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "en"
                            ],
                            "properties": {
                                "en": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "surname": {
                    "anyOf": [
                        {
                            "type": "object",
                            "required": [
                                "cs"
                            ],
                            "properties": {
                                "cs": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "sk"
                            ],
                            "properties": {
                                "sk": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "en"
                            ],
                            "properties": {
                                "en": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "middlenames": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "type": "object",
                                "required": [
                                    "cs"
                                ],
                                "properties": {
                                    "cs": {
                                        "type": "string"
                                    }
                                }
                            },
                            {
                                "type": "object",
                                "required": [
                                    "sk"
                                ],
                                "properties": {
                                    "sk": {
                                        "type": "string"
                                    }
                                }
                            },
                            {
                                "type": "object",
                                "required": [
                                    "en"
                                ],
                                "properties": {
                                    "en": {
                                        "type": "string"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "required": [
                "name",
                "surname",
                "middlenames"
            ]
        },
        "occupant": {
            "allOf": [
                {
                    "$ref": "#/$defs/person"
                },
                {
                    "type": "object",
                    "properties": {
                        "date_from": {
                            "type": "string",
                            "format": "date"
                        },
                        "unpaid_fees": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "date_from",
                        "unpaid_fees"
                    ]
                }
            ]
        },
        "mayor": {
            "allOf": [
                {
                    "$ref": "#/$defs/person"
                },
                {
                    "type": "object",
                    "properties": {
                        "dateFrom": {
                            "type": "string",
                            "format": "date"
                        },
                        "until": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    "required": [
                        "dateFrom",
                        "until"
                    ]
                }
            ]
        },
        "street": {
            "type": "object",
            "properties": {
                "name": {
                    "anyOf": [
                        {
                            "type": "object",
                            "required": [
                                "cs"
                            ],
                            "properties": {
                                "cs": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "sk"
                            ],
                            "properties": {
                                "sk": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "en"
                            ],
                            "properties": {
                                "en": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "sidewalk": {
                    "type": "boolean"
                },
                "houses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/house"
                    }
                }
            },
            "required": [
                "name",
                "sidewalk",
                "houses"
            ],
            "additionalProperties": false
        },
        "house": {
            "type": "object",
            "properties": {
                "number": {
                    "type": "integer",
                    "minimum": 1
                },
                "colour": {
                    "type": "string",
                    "pattern": "^[0-9A-Fa-f]{6}$"
                },
                "area": {
                    "type": "number",
                    "exclusiveMinimum": 0
                },
                "occupants": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/occupant"
                    }
                }
            },
            "required": [
                "number",
                "colour",
                "area",
                "occupants"
            ],
            "additionalProperties": false
        }
    },
    "type": "array",
    "title": "Towns",
    "minItems": 1,
    "items": {
        "type": "object",
        "title": "Town",
        "properties": {
            "townName": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "cs"
                        ],
                        "properties": {
                            "cs": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "sk"
                        ],
                        "properties": {
                            "sk": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "en"
                        ],
                        "properties": {
                            "en": {
                                "type": "string"
                            }
                        }
                    }
                ]
            },
            "hasFlag": {
                "type": "boolean"
            },
            "hasBroadcast": {
                "type": "boolean"
            },
            "streets": {
                "type": "array",
                "items": {
                    "$ref": "#/$defs/street"
                }
            },
            "mayor": {
                "$ref": "#/$defs/mayor"
            },
            "townhall": {
                "$ref": "#/$defs/house"
            }
        },
        "required": [
            "townName",
            "hasFlag",
            "hasBroadcast",
            "streets",
            "mayors"
        ],
        "additionalProperties": false
    }
}
