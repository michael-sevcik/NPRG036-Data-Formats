{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.com/towns.schema.json",
    "$defs": {
        "person": {
            "type": "object",
            "properties": {
                "firstName": {
                    "anyOf": [
                        {
                            "type": "object",
                            "required": [
                                "cs"
                            ],
                            "properties": {
                                "cs": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "sk"
                            ],
                            "properties": {
                                "sk": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "en"
                            ],
                            "properties": {
                                "en": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "surname": {
                    "anyOf": [
                        {
                            "type": "object",
                            "required": [
                                "cs"
                            ],
                            "properties": {
                                "cs": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "sk"
                            ],
                            "properties": {
                                "sk": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "en"
                            ],
                            "properties": {
                                "en": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "middleNames": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "type": "object",
                                "required": [
                                    "cs"
                                ],
                                "properties": {
                                    "cs": {
                                        "type": "string"
                                    }
                                }
                            },
                            {
                                "type": "object",
                                "required": [
                                    "sk"
                                ],
                                "properties": {
                                    "sk": {
                                        "type": "string"
                                    }
                                }
                            },
                            {
                                "type": "object",
                                "required": [
                                    "en"
                                ],
                                "properties": {
                                    "en": {
                                        "type": "string"
                                    }
                                }
                            }
                        ]
                    }
                }
            },
            "required": [
                "firstName",
                "surname"
            ]
        },
        "occupant": {
            "allOf": [
                {
                    "$ref": "#/$defs/person"
                },
                {
                    "type": "object",
                    "properties": {
                        "dateFrom": {
                            "type": "string",
                            "format": "date"
                        },
                        "unpaidFees": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "dateFrom",
                        "unpaidFees"
                    ]
                }
            ]
        },
        "mayor": {
            "allOf": [
                {
                    "$ref": "#/$defs/person" 
                },
                {
                    "type": "object",
                    "properties": {
                        "termStart": {
                            "type": "string",
                            "format": "date"
                        },
                        "termEnd": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    "required": [
                        "termStart",
                        "termEnd"
                    ]
                }
            ]
        },
        "street": {
            "type": "object",
            "properties": {
                "streetName": {
                    "anyOf": [
                        {
                            "type": "object",
                            "required": [
                                "cs"
                            ],
                            "properties": {
                                "cs": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "sk"
                            ],
                            "properties": {
                                "sk": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "en"
                            ],
                            "properties": {
                                "en": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "hasSidewalk": {
                    "type": "boolean"
                },
                "houses": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/house"
                    }
                }
            },
            "required": [
                "streetName",
                "hasSidewalk",
                "houses"
            ]
        },
        "house": {
            "type": "object",
            "properties": {
                "number": {
                    "type": "integer",
                    "minimum": 1
                },
                "colour": {
                    "type": "string",
                    "pattern": "^[0-9A-Fa-f]{6}$"
                },
                "area": {
                    "type": "number",
                    "exclusiveMinimum": 0
                },
                "occupants": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/occupant"
                    }
                }
            },
            "required": [
                "number",
                "colour",
                "area",
                "occupants"
            ]
        }
    },
    "type": "array",
    "title": "Towns",
    "minItems": 1,
    "items": {
        "type": "object",
        "title": "Town",
        "properties": {
            "townName": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "cs"
                        ],
                        "properties": {
                            "cs": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "sk"
                        ],
                        "properties": {
                            "sk": {
                                "type": "string"
                            }
                        }
                    },
                    {
                        "type": "object",
                        "required": [
                            "en"
                        ],
                        "properties": {
                            "en": {
                                "type": "string"
                            }
                        }
                    }
                ]
            },
            "hasFlag": {
                "type": "boolean"
            },
            "hasBroadcast": {
                "type": "boolean"
            },
            "streets": {
                "type": "array",
                "items": {
                    "$ref": "#/$defs/street"
                }
            },
            "mayor": {
                "$ref": "#/$defs/mayor"
            },
            "townhall": {
                "$ref": "#/$defs/house"
            }
        },
        "required": [
            "townName",
            "hasFlag",
            "hasBroadcast",
            "mayor"
        ]
    }
}
